<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScoreBoardForUser">

    <TextView
        android:id="@+id/AccountName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="4dp"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/SlidingtileScore"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="96dp"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/CatchingBallScore"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="197dp"
        android:layout_toEndOf="@+id/SlidingtileScore"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/LightsOutScore"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-411dp"
        android:layout_marginBottom="261dp"
        android:layout_toEndOf="@+id/CatchingBallScore"
        android:textSize="20sp" />

    <Button
        android:id="@+id/GameCenter"
        android:layout_width="187dp"
        android:layout_height="58dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-188dp"
        android:layout_marginTop="529dp"
        android:layout_marginEnd="0dp"
        android:layout_toEndOf="@+id/LightsOutScore"
        android:text="@string/go_to_gameCenter_button" />

</RelativeLayout>